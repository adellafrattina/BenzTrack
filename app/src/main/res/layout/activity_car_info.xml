<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_refills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_refills_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/refills"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                style="@style/TextSubtitle"/>

            <TextView
                android:id="@+id/text_refills_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/refill_placeholder"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                style="@style/TextCaption"/>

            <Button
                android:id="@+id/button_add_refill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_refill"
                android:layout_gravity="center_horizontal"
                style="@style/TextButton"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_maintenance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_refills"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_maintenance_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maintenance_card"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                style="@style/TextSubtitle"/>

            <TextView
                android:id="@+id/text_maintenance_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/maintenance_placeholder"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                style="@style/TextCaption"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button_set_maintenance_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/maintenance_date"
                    android:layout_marginEnd="16dp"
                    style="@style/TextButton"/>

                <Button
                    android:id="@+id/button_pay_maintenance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/maintenance_pay"
                    style="@style/TextButton"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_insurance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_maintenance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_insurance_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/insurance_card"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                style="@style/TextSubtitle"/>

            <TextView
                android:id="@+id/text_insurance_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/insurance_placeholder"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                style="@style/TextCaption"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button_set_insurance_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/insurance_date"
                    android:layout_marginEnd="16dp"
                    style="@style/TextButton"/>

                <Button
                    android:id="@+id/button_pay_insurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/insurance_pay"
                    style="@style/TextButton"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_tax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_insurance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_tax_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tax_card"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                style="@style/TextSubtitle"/>

            <TextView
                android:id="@+id/text_tax_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tax_placeholder"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                style="@style/TextCaption"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button_set_tax_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tax_date"
                    android:layout_marginEnd="16dp"
                    style="@style/TextButton"/>

                <Button
                    android:id="@+id/button_pay_tax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tax_pay"
                    style="@style/TextButton"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>